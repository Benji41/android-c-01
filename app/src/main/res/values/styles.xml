<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_name">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text" parent="style_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_spacing</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="style_text_font_included" parent="style_text">
        <item name="android:fontFamily">@font/sarala</item>
    </style>
</resources>